<script language="vbscript" type="text/vbscript"> 
	'	Set objects and declare global variables 
		
		Set ProgressUI = CreateObject("Microsoft.SMS.TsProgressUI")
		ProgressUI.CloseProgressDialog
		
		DIM strDepartment 
		DIM strPrimaryUser
		
		Sub Window_onLoad 
			window.resizeTo 700,500    ' Resize the HTA window on first load 
			window.moveTo 170, 50    ' Move the window to the center 
		End Sub 



		Sub FinishHTA 
		
			Dim env
			Set env = CreateObject("Microsoft.SMS.TSEnvironment") 
			env("OSDComputerName") = ComputerName.Value
			env("OsSetupType") = KurulumTipi.Value
			env("SMSTSAssignUsersMode") = "Auto"
			
			self.close
		End Sub
		
		 
	</script> 

